<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home_flat"
            android:layout_gravity="center"
            android:layout_weight="12"/>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="#ffb0b0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/chuseok">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="70dp">

                <Button
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="54dp"
                    android:background="@drawable/luvpra"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="121dp"
                    android:background="@drawable/famhap"/>
                <Button
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="194dp"
                    android:background="@drawable/hames"/>
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginLeft="261dp"
                    android:background="@drawable/foreluv"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@drawable/september">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="185dp">

                <Button
                    android:id="@+id/btn_dasan"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/bigdasan"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/friend2"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/thankka"/>

            </FrameLayout>

        </LinearLayout>



    </LinearLayout>

</FrameLayout>