<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffe2e2">

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cate_flat"
            android:layout_gravity="center"
            android:layout_weight="12"/>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/category">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_cate_love"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="175dp"
                android:background="@drawable/cate_love" />
            <Button
                android:id="@+id/btn_cate_thanks"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="175dp"
                android:layout_marginLeft="110dp"
                android:background="@drawable/cate_thanks"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="335dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/cate_cong"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="83dp"
                android:background="@drawable/cate_sorry"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="140dp"
                android:background="@drawable/cate_esc"/>

        </FrameLayout>

    </ScrollView>

</LinearLayout>