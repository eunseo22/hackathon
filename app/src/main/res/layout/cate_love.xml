<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/border">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_logo"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cate_love_top"
            android:layout_gravity="center"
            android:layout_weight="12"/>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_love_flower1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:background="@drawable/cate_love_1"/>

            <LinearLayout
                android:layout_width="128dp"
                android:layout_height="53dp"
                android:background="@drawable/cate_love_1_text"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="40dp"></LinearLayout>


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:background="@drawable/cate_love_2"/>

            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="45dp"
                android:background="@drawable/cate_love_2_text"
                android:layout_marginTop="193dp"
                android:layout_marginLeft="20dp"></LinearLayout>


        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:background="@drawable/cate_love_3"/>

            <LinearLayout
                android:layout_width="171dp"
                android:layout_height="56dp"
                android:background="@drawable/cate_love_3_text"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="15dp"></LinearLayout>


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:background="@drawable/cate_love_4"/>

            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="77dp"
                android:background="@drawable/cate_love_4_text"
                android:layout_marginTop="173dp"
                android:layout_marginLeft="12dp"></LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>